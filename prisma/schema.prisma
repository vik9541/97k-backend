generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER_B2C // Розничный покупатель
  CUSTOMER_B2B // Корпоративный клиент
  MANAGER      // Менеджер
  ADMIN        // Администратор
}

enum OrderStatus {
  PENDING      // Ожидает подтверждения
  CONFIRMED    // Подтвержден
  PROCESSING   // В обработке
  SHIPPED      // Отправлен
  DELIVERED    // Доставлен
  CANCELLED    // Отменен
}

enum PaymentStatus {
  PENDING      // Ожидает оплаты
  PAID         // Оплачен
  FAILED       // Ошибка оплаты
  REFUNDED     // Возвращен
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER_B2C)
  
  // Профиль
  firstName String?
  lastName  String?
  phone     String?
  
  // B2B специфичные поля
  companyName String?
  inn         String?  @unique
  kpp         String?
  creditLimit Decimal? @db.Decimal(10, 2)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  orders    Order[]
  addresses Address[]
  
  @@map("users")
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  
  // Адрес
  country   String   @default("Россия")
  city      String
  street    String
  building  String
  apartment String?
  zipCode   String?
  
  isDefault Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders    Order[]
  
  @@map("addresses")
}

model Product {
  id          String   @id @default(uuid())
  
  // Основные данные
  name        String
  description String?
  sku         String   @unique // Артикул
  
  // Цены
  priceRetail Decimal  @db.Decimal(10, 2) // Розничная цена
  priceB2B    Decimal? @db.Decimal(10, 2) // Оптовая цена
  
  // Остатки
  stock       Int      @default(0)
  unit        String   @default("шт") // Единица измерения
  
  // Категория
  categoryId  String?
  
  // Метаданные
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Отношения
  category    Category?    @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  
  @@map("products")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  parentId    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Отношения
  parent      Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryTree")
  products    Product[]
  
  @@map("categories")
}

model Order {
  id            String        @id @default(uuid())
  orderNumber   String        @unique // Номер заказа
  
  // Клиент
  userId        String
  addressId     String
  
  // Статусы
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  
  // Суммы
  subtotal      Decimal       @db.Decimal(10, 2)
  deliveryPrice Decimal       @default(0) @db.Decimal(10, 2)
  totalPrice    Decimal       @db.Decimal(10, 2)
  
  // Доставка
  deliveryDate  DateTime?
  deliveryNotes String?
  
  // Timestamps
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Отношения
  user          User          @relation(fields: [userId], references: [id])
  address       Address       @relation(fields: [addressId], references: [id])
  items         OrderItem[]
  
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  
  quantity  Int
  price     Decimal  @db.Decimal(10, 2) // Цена на момент заказа
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  @@map("order_items")
}

// ============================================
// PHASE 10: APPLE CONTACTS INTEGRATION
// PHASE 11: GOOGLE CONTACTS + MULTI-SOURCE
// ============================================

model Contact {
  id               BigInt    @id @default(autoincrement())
  userId           String    @db.VarChar(255) // User who owns this contact
  
  // Basic contact info
  firstName        String?   @db.VarChar(255)
  lastName         String?   @db.VarChar(255)
  fullName         String?   @db.VarChar(512) // Victor iCloud: combined name
  email            String?   @db.VarChar(255)
  phone            String?   @db.VarChar(50)
  company          String?   @db.VarChar(255)
  jobTitle         String?   @db.VarChar(255)
  notes            String?   @db.Text
  
  // Victor iCloud Extended Fields
  phoneNumbers     Json?     // [{type: "mobile", number: "+7..."}]
  emails           Json?     // [{type: "work", email: "..."}]
  addresses        Json?     // [{type: "work", street: "...", city: "..."}]
  socialProfiles   Json?     // [{service: "telegram", username: "@..."}]
  birthday         DateTime?
  tags             String[]  // Теги для группировки
  
  // Photo storage
  photoUrl         String?   @db.VarChar(512)
  photoData        Bytes?    // Binary photo data
  
  // Engagement tracking
  engagementScore  Int       @default(0) // 0-100
  lastInteractionAt DateTime?
  totalInteractions Int      @default(0)
  
  // Apple Contacts Integration (PHASE 10)
  appleContactId   String?   @db.VarChar(255)
  appleModifiedAt  DateTime?
  
  // Google Contacts Integration (PHASE 11)
  googleContactId  String?   @db.VarChar(255)
  googleModifiedAt DateTime?
  
  // Outlook Contacts Integration (PHASE 12)
  outlookContactId String?   @db.VarChar(255)
  outlookModifiedAt DateTime?
  
  // Multi-source support (PHASE 11-12)
  sourceType       String    @default("manual") @db.VarChar(50) // 'apple' | 'google' | 'outlook' | 'all_three' | 'manual'
  syncVersion      Int       @default(1)
  
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  // Relations
  syncConflicts    SyncConflict[]
  activities       ContactActivity[]
  deals            Deal[]
  
  @@index([userId])
  @@index([email])
  @@index([fullName])
  @@index([company])
  @@index([appleContactId])
  @@index([googleContactId])
  @@index([outlookContactId])
  @@index([sourceType])
  @@index([tags])
  @@map("contacts")
}

model AppleContactsSync {
  id                  BigInt    @id @default(autoincrement())
  userId              String    @unique @db.VarChar(255)
  lastSyncAt          DateTime?
  syncToken           String?   @db.VarChar(255)
  totalContactsSynced Int       @default(0)
  enabled             Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([userId])
  @@map("apple_contacts_sync")
}

model GoogleContactsSync {
  id                  BigInt    @id @default(autoincrement())
  userId              String    @unique @db.VarChar(255)
  lastSyncAt          DateTime?
  syncToken           String?   @db.VarChar(255)
  totalContactsSynced Int       @default(0)
  enabled             Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([userId])
  @@map("google_contacts_sync")
}

model OutlookContactsSync {
  id                  BigInt    @id @default(autoincrement())
  userId              String    @unique @db.VarChar(255)
  status              String    @db.VarChar(50) @default("disconnected")
  lastSyncAt          DateTime?
  totalContactsSynced Int       @default(0)
  enabled             Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@index([userId])
  @@map("outlook_contacts_sync")
}

model SyncConflict {
  id                 BigInt    @id @default(autoincrement())
  contactId          BigInt
  userId             String    @db.VarChar(255)
  conflictType       String    @db.VarChar(50)
  localData          Json?
  remoteData         Json?
  resolved           Boolean   @default(false)
  resolutionStrategy String?   @db.VarChar(50)
  createdAt          DateTime  @default(now())
  resolvedAt         DateTime?

  contact Contact @relation(fields: [contactId], references: [id])

  @@index([contactId])
  @@index([userId])
  @@map("sync_conflicts")
}

// ============================================
// PHASE 13: ANALYTICS DASHBOARD
// ============================================

model AnalyticsCache {
  id          String    @id @default(uuid())
  key         String    @unique @db.VarChar(255) // Cache key: 'dashboard_kpis_userId', 'chart_data_userId'
  data        Json      // Cached JSON data
  userId      String?   @db.VarChar(255)
  expiresAt   DateTime  // TTL expiration
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([key])
  @@index([userId])
  @@index([expiresAt])
  @@map("analytics_cache")
}

model AnalyticsEvent {
  id          BigInt    @id @default(autoincrement())
  userId      String    @db.VarChar(255)
  contactId   BigInt?   // Related contact if applicable
  
  // Event details
  eventType   String    @db.VarChar(100) // 'contact_created', 'contact_updated', 'contact_synced', 'order_created', etc.
  eventData   Json?     // Additional event metadata
  
  // Metrics for aggregation
  value       Decimal?  @db.Decimal(15, 2) // Monetary value if applicable
  
  // Timestamps
  occurredAt  DateTime  @default(now())
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([contactId])
  @@index([eventType])
  @@index([occurredAt])
  @@map("analytics_events")
}

model ContactActivity {
  id          BigInt    @id @default(autoincrement())
  userId      String    @db.VarChar(255)
  contactId   BigInt
  
  // Activity details
  activityType String   @db.VarChar(100) // 'email', 'call', 'meeting', 'note', 'task', 'deal_update'
  description  String?  @db.Text
  metadata     Json?    // Additional activity data
  
  // Engagement scoring
  engagementScore Int   @default(0) // 0-100 contribution to engagement
  
  // Timestamps
  occurredAt   DateTime @default(now())
  createdAt    DateTime @default(now())

  // Relations
  contact      Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([contactId])
  @@index([activityType])
  @@index([occurredAt])
  @@map("contact_activities")
}

model Deal {
  id           BigInt    @id @default(autoincrement())
  userId       String    @db.VarChar(255)
  contactId    BigInt?
  
  // Deal info
  name         String    @db.VarChar(255)
  value        Decimal   @db.Decimal(15, 2)
  currency     String    @default("RUB") @db.VarChar(10)
  
  // Pipeline
  stage        String    @db.VarChar(100) // 'lead', 'qualified', 'proposal', 'negotiation', 'closed_won', 'closed_lost'
  probability  Int       @default(0) // 0-100%
  
  // Dates
  expectedCloseDate DateTime?
  closedAt     DateTime?
  
  // Timestamps
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  contact      Contact?  @relation(fields: [contactId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([contactId])
  @@index([stage])
  @@index([expectedCloseDate])
  @@map("deals")
}
