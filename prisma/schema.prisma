// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER_B2C // Розничный покупатель
  CUSTOMER_B2B // Корпоративный клиент
  MANAGER      // Менеджер
  ADMIN        // Администратор
}

enum OrderStatus {
  PENDING      // Ожидает подтверждения
  CONFIRMED    // Подтвержден
  PROCESSING   // В обработке
  SHIPPED      // Отправлен
  DELIVERED    // Доставлен
  CANCELLED    // Отменен
}

enum PaymentStatus {
  PENDING      // Ожидает оплаты
  PAID         // Оплачен
  FAILED       // Ошибка оплаты
  REFUNDED     // Возвращен
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMER_B2C)
  
  // Профиль
  firstName String?
  lastName  String?
  phone     String?
  
  // B2B специфичные поля
  companyName String?
  inn         String?  @unique
  kpp         String?
  creditLimit Decimal? @db.Decimal(10, 2)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  orders    Order[]
  addresses Address[]
  
  @@map("users")
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  
  // Адрес
  country   String   @default("Россия")
  city      String
  street    String
  building  String
  apartment String?
  zipCode   String?
  
  isDefault Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders    Order[]
  
  @@map("addresses")
}

model Product {
  id          String   @id @default(uuid())
  
  // Основные данные
  name        String
  description String?
  sku         String   @unique // Артикул
  
  // Цены
  priceRetail Decimal  @db.Decimal(10, 2) // Розничная цена
  priceB2B    Decimal? @db.Decimal(10, 2) // Оптовая цена
  
  // Остатки
  stock       Int      @default(0)
  unit        String   @default("шт") // Единица измерения
  
  // Категория
  categoryId  String?
  
  // Метаданные
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Отношения
  category    Category?    @relation(fields: [categoryId], references: [id])
  orderItems  OrderItem[]
  
  @@map("products")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  parentId    String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Отношения
  parent      Category?  @relation("CategoryTree", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryTree")
  products    Product[]
  
  @@map("categories")
}

model Order {
  id            String        @id @default(uuid())
  orderNumber   String        @unique // Номер заказа
  
  // Клиент
  userId        String
  addressId     String
  
  // Статусы
  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(PENDING)
  
  // Суммы
  subtotal      Decimal       @db.Decimal(10, 2)
  deliveryPrice Decimal       @default(0) @db.Decimal(10, 2)
  totalPrice    Decimal       @db.Decimal(10, 2)
  
  // Доставка
  deliveryDate  DateTime?
  deliveryNotes String?
  
  // Timestamps
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  // Отношения
  user          User          @relation(fields: [userId], references: [id])
  address       Address       @relation(fields: [addressId], references: [id])
  items         OrderItem[]
  
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(uuid())
  orderId   String
  productId String
  
  quantity  Int
  price     Decimal  @db.Decimal(10, 2) // Цена на момент заказа
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Отношения
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id])
  
  @@map("order_items")
}
